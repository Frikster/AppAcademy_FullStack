.chat-input {
  display: block;
  font-size: 16px;
  border-color: lightgray;
  border-style: solid;
  border-radius: 5px;
  padding: 10px;
  width: 100%;
  box-sizing: border-box;
  border-radius: 0 5px 5px 0;
  border-left:0;
}

.chat-input-container {
  display: flex;
  flex-direction: row;
  width: 100vw;
  padding: 10px;
  box-sizing: border-box;
}

.chat-logs {
  #  position: fixed;
  height: 100%;
  #  width: 100%;
  #  height: 500px;
  overflow-y: scroll;
}

.chat-logs h1 {
  margin-left: 20px;
}

.chat-logs h1:before {
  content: '# '
}

.chat-author {
  font-weight: bold;
}

.chat-message, .chat-message-first {
  margin-top: 8px;
}

.chat-message
{
  margin-left: 52px;
}

.chat-message img {
  max-width:360px;
}

.chat-message-header {
  display: flex;
  flex-direction: row;
  #  margin-bottom: 8px;
}

.chat-message-header-text-div {
  margin-left: 8px;
}

.chat-author-and-created-at-container span {

}

.profile-pic-big {
  border-radius: 8px;
  background: url('<%= asset_path("SlackSloth.jpg") %>') no-repeat;
  background-size: 100% 100%;
  height: 44px;
  width: 44px;
}

.profile-pic-small {
  border-radius: 8px;
  background: url('<%= asset_path("SlackSloth.jpg") %>') no-repeat;
  background-size: 100% 100%;
  height: 36px;
  width: 36px;
}

.chat-section {
  padding-top: 6px;
  padding-bottom: 6px;
  margin-left: 20px;
}

.chat-created-at {
  margin-left: 5px;
  color: gray;
  font-size: 11px;
}

input[type=file] { 
  height: 1px; 
  visibility: hidden;
}

.chat-input-plus-button {
  margin: 0;
  padding-left: 10px;
  padding-right: 10px;
  color: lightgray;
  font-weight: 400;
  border-color: lightgray;
  border-style: solid;
  border-radius: 5px 0 0 5px;
  border-width:2px;
}

.chat-input-plus-button:hover {
  border-color: #38978d;
  background-color: rgb(86, 182, 139);
  color: white;
  cursor: pointer;
}
